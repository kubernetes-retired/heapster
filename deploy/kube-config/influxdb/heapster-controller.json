{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "k8s-app" : "heapster",
	    "name": "heapster",
	    "version": "v6"
	},
	"name": "heapster",
	"namespace": "kube-system"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "k8s-app": "heapster",
	    "version": "v6"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "k8s-app": "heapster",
		    "version": "v6"
		}
	    },
	    "spec": {
		"containers": [
		    {
			"image": "kubernetes/heapster:v0.18.4",
			"name": "heapster",
			"command": [
			    "/heapster",
			    "--source=kubernetes:https://kubernetes",
			    "--sink=influxdb:http://monitoring-influxdb:8086"
			]
		    }
		]
	    }
	}
    }
}
