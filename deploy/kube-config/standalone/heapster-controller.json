{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "k8s-app" : "heapster",
	    "name": "heapster",
	    "version": "v6"
	},
	"name": "heapster",
	"namespace": "kube-system"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "k8s-app": "heapster",
	    "version": "v6"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "k8s-app": "heapster",
		    "version": "v6"
		}
	    },
	    "spec": {
		"volumes": [
		    {
			"name": "ssl-certs",
			"hostPath": {
			    "path": "/etc/ssl/certs"
			}
		    }
		],
		"containers": [
		    {
			"image": "kubernetes/heapster:v0.18.3",
			"name": "heapster",
			"command": [
			    "/heapster",
			    "--source=kubernetes"
			],
			"volumeMounts": [
			    {
				"name": "ssl-certs",
				"readOnly": true,
				"mountPath": "/etc/ssl/certs"
			    }
			]
		    }
		]
	    }
	}
    }
}
